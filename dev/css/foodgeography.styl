/** regions **/

.regions
	h1
		margin-top 80px

.regions-toggle
	display flex
	justify-content center
	margin-top 40px

	.regions-button
		display flex
		justify-content space-between
		align-items center

		padding 5px 15px

		margin-right 15px

		.button-svg
			width 18px
			margin-right 5px

			svg
				display block
				width 100%

				path
					transition fill 0.3s $transitionAnimation
		&:hover
			.button-svg
				svg
					path
						fill #fff

		&.active
			background $colorSand
			color #FFF

			.button-svg
				svg
					path
						fill #fff

		&:last-child
			margin-right 0

.regions-tabs
	margin-top 40px
	box-sizing border-box

	.regions-tab
		display block
		transition opacity 0.3s $transitionAnimation, transform 0.3s $transitionAnimation

		&.hide
			opacity 0
			transform scale(0.9)

		&.hide-block
			display none

.regions-map
	width 100%
	height 775px
	border-top 2px solid #e3e3e3

	.map
		width 100%
		height 100%

.regions-list-container
	margin-bottom 105px
	border-top 2px solid #e3e3e3


.regions-list
	display flex
	align-items center
	justify-content flex-start
	flex-wrap wrap
	padding-top 65px
	margin-bottom 30px
	box-sizing border-box

	.regions-item
		position relative
		max-width 48%
		width 100%

		margin-right 4%
		margin-bottom 60px

		transition opacity 0.3s $transitionAnimation, transform 0.3s $transitionAnimation

		overflow hidden

		&:nth-child(2n)
			margin-right 0

