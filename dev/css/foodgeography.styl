/*** Settings ***/
@import "nib"
@import "../lib/css/css"

global-reset();
reset-html5();
form-reset();
b
strong
i
em
	font-style normal
	font-weight normal

$transitionAnimation = cubic-bezier(0.250, 0.460, 0.450, 0.940)

$colorSand = #c69c6d
$colorMain = #333333

/* fonts */

@font-face
	font-family "HarmoniaSansProCyrRegular"
	src url("../fonts/HarmoniaSansProCyrRegular.woff") format("woff")

@font-face
	font-family "HarmoniaSansProCyrBold"
	src url("../fonts/HarmoniaSansProCyr-Bold.woff") format("woff")

@font-face
	font-family "LeksaPro"
	src url("../fonts/LeksaPro.woff") format("woff")

@font-face
	font-family "LeksaProItalic"
	src url("../fonts/LeksaProItalic.woff") format("woff")

/* //fonts */
html
	height 100%
body
	position relative
	width 100%
	height 100%
	min-height 100vh
	line-height 1
	font-size 14px
	font-family "HarmoniaSansProCyrRegular"
	cursor default
	color $colorMain

.body-preloader
	position fixed
	top 0
	right 0
	bottom 0
	left 0

	display flex
	justify-content center
	align-items center

	width 100%
	height 100%

	background #ffffff

	transition background 1s $transitionAnimation

	z-index 10000

	overflow hidden

	.body-preloader-bcg
		position absolute
		top 50%
		left 50%

		display block
		width 500px
		height 500px

		margin-left -250px
		margin-top -250px

		background #333333
		border-radius 50%

		opacity 0

		z-index 10001

		transition opacity 0.3s $transitionAnimation, transform 2s $transitionAnimation

	.body-preloader-container
		position relative
		max-width 500px
		width 100%
		opacity 0
		transition opacity 0.3s $transitionAnimation, transform 0.3s $transitionAnimation

		z-index 10002
		svg
			display block
			width 100%

	&.active
		.body-preloader-bcg
			opacity 1
			transform scale(5)

	&.active
		.body-preloader-container
			opacity 1

	&.hide
		background transparent

		.body-preloader-container
			transform scale(0.8)
			opacity 0

		.body-preloader-bcg
			opacity 0

/*** //Settings ***/

/*** General style ***/
.page
	display block
	width 100%

	min-height 100%

	margin 0 auto

.page-inner
	position relative
	display block
	margin 0 auto
	box-sizing border-box

	&--w1
		max-width 100%
		padding 0 20px

	&--w2
		max-width 1290px
		padding 0 20px

	&--w3
		max-width 1065px
		padding 0 20px


/** header **/

.page-header
	position fixed
	top 0
	right 0
	left 0
	width 100%
	padding 8px 20px
	box-sizing border-box
	display flex
	justify-content space-between
	align-items center
	background transparent
	transition background 0.3s $transitionAnimation
	z-index 100

	&.active
		background #333

.fixed-header
	.page-header
		background #333

.header-logo--mini
	display flex
	max-width 180px
	justify-content flex-start
	align-items center

	.header-logo-icon
		display block

		&:nth-child(1)
			width 35px
			margin-right 15px

		&:nth-child(2)
			width 130px

		svg
			display block
			width 100%

.header-menu
	max-width 470px
	width 100%

	.header-menu-inner
		display flex
		justify-content space-between
		align-items center

	.header-menu-item
		color $colorSand
		font-family "HarmoniaSansProCyrRegular"
		font-size 14px

		text-transform uppercase

.header-form
	max-width 235px
	min-width 200px

	.form-row--search
		width 100%

		.header-form-search
			position absolute
			top 50%
			right 1px

			display block
			width 22px
			height 22px

			margin-top -11px

			transition transform 0.6s $transitionAnimation

			svg
				display block
				width 100%

				path
					stroke-width 7px
		&.active
		&:hover
			.header-form-search
				transform translate(-195px)

		.form-item
			padding 10px 45px
			transition background 0.3s $transitionAnimation
			background transparent

			&:focus
				border-right 5px


		&.active
		&:hover
			.form-item
				background #fff


.header-burger
	position relative
	display none
	width 25px
	height 20px
	cursor pointer

.header-burger
	.header-burger-layout
		position absolute
		top 9px
		left 0
		right 0
		display block
		width 100%
		height 2px
		background #c69c6d
		transition transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	&:before
		content ""
		position absolute
		top 0px
		left 0
		right 0
		display block
		width 100%
		height 2px
		background #c69c6d
		transition transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	&:after
		content ""
		position absolute
		bottom 0px
		left 0
		right 0
		display block
		width 100%
		height 2px
		background #c69c6d
		transition transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	&.active
		.header-burger-layout
			transform scale(0)

		&:before
			transform rotate(40deg) translate(5px, 6px)

		&:after
			transform rotate(-40deg) translate(6px, -8px)

.mobile-menu
	position fixed
	top 0
	right 0
	left 0
	bottom 0
	display none
	width 100%
	height 100vh
	transition transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	z-index 99

	.mobile-menu-background
		position absolute
		top 0
		right 0
		left 0
		bottom 0
		display block
		width 100%
		height 100%
		background #333
		transform translateY(-100%)
		transition transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)
		transition-delay 0.3s

	.mobile-menu-container
		padding 80px 0 0 20px
		box-sizing border-box
		opacity 0
		transform translateX(-50px)
		transition transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)
		transition-delay 0s

.mobile-menu
	&.active-block
		display block

.mobile-menu
	&.active-show
		.mobile-menu-background
			transform translateY(0)
			transition-delay 0s

		.mobile-menu-container
			transform translateX(0)
			opacity 1
			transition-delay 0.3s

.mobile-menu-top
	.mobile-menu-top-item-holder
		margin-bottom 20px

	.mobile-menu-top-item
		font-size: 20px;

.mobile-menu
	.header-form
		display block


/** //header **/


/** dispatch **/

.dispatch
	padding 100px 0
	box-sizing border-box
	background #c69c6d

	.dispatch-title
		margin-bottom 70px
		line-height 32px
		font-size 24px
		text-align center
		color #fff

	.form
		max-width 640px
		margin 0 auto

/** //dispatch **/


/** footer **/

.page-footer
	padding 100px 0 30px 0
	box-sizing border-box

	background $colorMain

.footer-logo
	max-width 200px
	margin 0 auto 60px auto

	svg
		display block
		width 100%

.footer-sub
	display block
	margin 0 auto 40px auto

	.footer-sub-title
		display block
		width 100%
		margin-bottom 20px

		font-size 14px
		font-family "HarmoniaSansProCyrRegular"
		text-align center
		text-transform uppercase

		color #fff

	.footer-sub-list
		display flex
		align-items center
		justify-content space-between

		max-width 110px
		width 100%
		margin 0 auto

		.footer-sub-item
			display block
			max-width 20px
			height 20px

			svg
				display block
				width 100%
				height 100%

				transition fill 0.3s $transitionAnimation

				&:hover
					fill #fff

.footer-creators
	display block
	width 100%
	text-align center

	.footer-creators-link
		display block
		margin 0 auto
		font-size 14px
		font-family "HarmoniaSansProCyrRegular"
		text-align center

	.footer-creators-name
		color $colorSand
		text-transform uppercase

		border-bottom 1px solid transparent
		transition border-bottom-color 0.3s $transitionAnimation

	&:hover
		.footer-creators-name
			border-bottom-color $colorSand

/** //footer **/


/** link and button **/

.link
	text-decoration none

.link-white
	color #fff

.link-black
	color #4a4a4a

.link-black--bottom
	border-bottom 1px solid #4a4a4a
	transition border-bottom-color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	&:hover
		border-bottom-color transparent

.link-black--bottom-reverse
	border-bottom 1px solid transparent
	transition border-bottom-color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	&:hover
		border-bottom-color #4a4a4a

.link-black--top-bottom-reverse
	border-bottom 1px solid transparent
	border-top 1px solid transparent
	transition border-color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	&:hover
		border-top-color #4a4a4a
		border-bottom-color #4a4a4a

.link--opacity
	transition opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	&:hover
		opacity 0.6

.link-darkgray
	color #4A4A4A

.link-gray
	color #a9a9a9

.link-gray--bottom
	border-bottom: 1px solid #a9a9a9
	transition: border-bottom-color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	&:hover
		border-bottom-color transparent

.link-gray--bottom-reverse
	border-bottom-color transparent

	transition border-bottom-color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	&:hover
		border-bottom 1px solid #a9a9a9

.link--white
	transition color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	&:hover
		color #fff

.link--sand-bottom
	border-bottom 1px solid transparent
	transition border-bottom-color 0.3s $transitionAnimation, color 0.3s $transitionAnimation

	&:hover
		border-bottom-color $colorSand
		color $colorSand

.button
	width 100%
	padding 15px 0
	box-sizing border-box
	border-radius 5px
	text-align center
	text-transform uppercase
	font-size 16px
	transition background 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), border-radius 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);

.button--dark
	background #333
	color #fff

	&:hover
		opacity 0.8
		border-radius 15px

.button--sand
	border-radius 20px
	border 1px solid $colorSand
	text-align center
	color $colorSand

	transition background 0.3s $transitionAnimation, color 0.3s $transitionAnimation

	&:hover
		 background $colorSand
		 color #FFF

/** //link and button **/


/** form **/

.form
	.form-row
		position relative
		display flex
		justify-content space-between

.form
	.form-row--60
		width 58%

.form
	.form-row--40
		width 38%

.form
	.form-item
		display block
		width 100%
		padding 16px 25px
		box-sizing border-box
		font-size 14px
		border-radius 5px
		background #fff
		color #4a4a4a
		transition border-radius 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

.form
	.form-item:focus
		border-radius 15px

/** //form **/

.more-container
	text-align center

.more
	padding-bottom 3px

	border-bottom 1px solid #979797

	text-transform uppercase

	font-size 14px
	font-family "HarmoniaSansProCyrBold"

	transition border-bottom-color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

.more:hover
	border-bottom-color transparent

.page-text
	font-size 16px
	line-height 28px

	h1
		font-size 60px
		line-height 80px

	h2
		color #4a4a4a
		font-size 44px
		line-height 1

	h3
		color #4c4c4c
		line-height 36px
		font-size 28px
		font-family "LeksaProItalic"

	p
		margin-bottom 25px
		line-height 28px

		text-align left
		font-size 18px
		font-family "LeksaPro"

		color #4c4c4c

	.center
		text-align center

.img
	display block
	width 100%

.slider
	margin-bottom 85px
	box-sizing border-box

	.owl-item
		.slider-item-holder
			position relative

			&:before
				content ""
				display block
				padding-top 80%

			img
				position absolute
				top 0
				left 0
				bottom 0
				right 0

				display block
				width 100%
				height 100%

				object-fit cover

		.slider-item-note
			display block
			max-width 600px
			width 100%

			margin 50px auto 0 auto

			line-height 28px
			text-align center

			font-size 20px
			font-family "LeksaProItalic"

			opacity 0
			transition transform 0.6s $transitionAnimation, opacity 0.6s $transitionAnimation
			transition-delay 1s
			transform translateY(50px)

			color #4C4C4C

		&.active
			.slider-item-note
				opacity 1
				transform translateY(0)

	&--full
		padding 0 90px

		.owl-nav
			.owl-prev
				position absolute
				top 50%
				left 20px

				width 50px

				opacity 1
				transform translateY(-25px)
				z-index 100

				svg
					display block
					width 100%

					path
						stroke-width 4px

						&.arrow
							transition transform 0.3s $transitionAnimation
				&:hover
					svg
						path
							&.arrow
								transform translateX(-15px)

			.owl-next
				position absolute
				top 50%
				right 20px

				width 50px

				opacity 1
				transform translateY(-25px)
				z-index 100

				svg
					display block
					width 100%

					path
						stroke-width 4px

						&.arrow
							transition transform 0.3s $transitionAnimation
				&:hover
					svg
						path
							&.arrow
								transform translateX(15px)

/** //region **/


/** load **/

.load
	position relative
	width 100%
	height 45px
	text-align center

	.load-more
		position absolute

		left 50%
		margin-left -25px

		display block
		width 45px
		height 45px

		cursor pointer

		transition transform 0.3s $transitionAnimation

		&:hover
			transform rotate(360deg)

		&:before
			content ""
			position absolute
			width 100%
			height 100%
			top 0
			left 0
			background-image url(../svg/circle-arrow.svg)
			background-repeat no-repeat
			background-size cover

		&.loading
			animation-name spin
			animation-duration 300ms
			animation-iteration-count infinite
			animation-timing-function linear

/** //load **/


.flex-list
	display flex
	justify-content flex-start
	align-items flex-start
	flex-wrap wrap

	margin-bottom 45px

	.flex-item
		display inline-block
		max-width 48%
		width 100%

		margin-bottom 65px

		&--30
			max-width 30%
			width 100%

			margin-right 4%

			&:nth-child(3n)
			&:last-child
				margin-right 0

		&--48
			max-width 48%
			width 100%

			margin-right 3.4%

			&:nth-child(2n)
			&:last-child
				margin-right 0

		.flex-container
			display block
			margin-bottom 40px

			overflow hidden

			img
				display block
				width 100%

				transition transform 0.3s $transitionAnimation

		.flex-name
			display block
			margin-bottom 30px

			font-size 24px
			font-family "HarmoniaSansProCyrBold"

			text-align center

			transition opacity 0.3s $transitionAnimation

			color #000

		.flex-text
			display block
			width 100%

			padding 0 20px
			box-sizing border-box

			line-height 24px

			text-align center

			font-size 16px

			color #4A4A4A

		.flex-date
			display block
			margin-bottom 20px
			text-align center
			font-size 12px
			color #9B9B9B
		&:hover
			.flex-container
				img
					transform scale(1.1)

			.flex-name
				opacity 0.6

