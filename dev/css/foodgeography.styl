	margin-top 40px
	box-sizing border-box

	.regions-tab
		display block
		transition opacity 0.3s $transitionAnimation, transform 0.3s $transitionAnimation

		&.hide
			opacity 0
			transform scale(0.9)

		&.hide-block
			display none

.regions-map
	width 100%
	height 775px
	border-top 2px solid #e3e3e3

	.map
		width 100%
		height 100%

.regions-list-container
	margin-bottom 105px
	border-top 2px solid #e3e3e3


.regions-list
	display flex
	align-items center
	justify-content flex-start
	flex-wrap wrap
	padding-top 65px
	margin-bottom 30px
	box-sizing border-box

	.regions-item
		position relative
		max-width 48%
		width 100%

		margin-right 4%
		margin-bottom 60px

		transition opacity 0.3s $transitionAnimation, transform 0.3s $transitionAnimation

		overflow hidden

		&:nth-child(2n)
			margin-right 0

.regions-item
	&.load-events-item
		opacity 0
		transform scale(0.8)

	.regions-container
		position relative

		.regions-img
			display block
			width 100%

		.regions-about-list
			position absolute
			top 0
			left 0
			right 0
			bottom 0

			display flex
			flex-flow column
			align-items center
			justify-content center
			width 100%
			height 100%

			opacity 0
			transform scale(0.9)

			z-index 10

			transition opacity 0.3s $transitionAnimation, transform 0.3s $transitionAnimation

			.regions-about-item
				margin-bottom 25px
				font-size 24px
				text-align center

				&:last-child
					margin-bottom 0

		&:after
			content ""
			position absolute
			top 0
			left 0
			right 0
			bottom 0

			display block
			width 100%
			height 100%

			background radial-gradient(ellipse at center, rgba(253,255,255,1) 0%,rgba(225,255,255,1) 0%,rgba(212,243,252,1) 87%,rgba(237,244,247,1) 100%,rgba(249,254,255,1) 100%,rgba(177,216,245,1) 100%,rgba(249,254,255,1) 100%,rgba(225,255,255,1) 100%,rgba(225,255,255,1) 100%,rgba(237,246,249,1) 100%)

			opacity 0
			transform matrix(1.2, 0, 0.5, 0.8, 50, 0)
			transition opacity 0.3s $transitionAnimation, transform 0.3s $transitionAnimation

			z-index 5

		/*&:before
			content ''
			position absolute
			height 0
			width 0
			top 0
			right 0
			background #fff
			background linear-gradient(225deg, #fff 45%, #bfdae7 50%, #c8e2ee 100%, #fff 80%)
			box-shadow -1px 1px 1px rgba(0,0,0,0.1)
			transition-duration 0.3s
			transition-property width, height
			z-index 20*/

		&:hover
			&:after
				opacity 0.7
				transform none

			/*&:before
				width 25px
				height 25px*/

			.regions-about-list
				opacity 1
				transform scale(1)

	.regions-name
		display block
		margin-top 25px

		font-size 34px
		text-align left
/** //regions **/

/** regions detail **/

.region-detail
	margin-top 55px

	.region-detail-logo

		display block
		max-width 100px
		width 100%
		margin 0 auto 25px auto

		svg
			display block
			width 100%

	.region-detail-back
		margin-bottom 30px
		text-align center
		font-size 24px

	.region-detail-name
		display block
		margin-bottom 55px
		text-align center
		font-size 60px
		font-weight 600

	.region-detail-sections
		display flex
		justify-content center
		align-items center

		margin-bottom 45px

		.region-detail-sections-item
			padding-top 5px
			padding-bottom 5px
			margin-right 30px
			font-size 18px
			font-family "HarmoniaSansProCyrBold"

			&:last-child
				margin-right 0px

	.region-container
		width 100%

		.region-img
			display block
			width 100%

	.region-about
		padding  100px 0 70px 0

		.region-about-text
			max-width 755px
			width 100%
			margin 0 auto 70px auto

			h2
				margin-bottom 40px
				text-align center

			h3
				margin-bottom 50px
				font-size 24px
				text-align center

	.region-sights
		padding 75px 0 70px 0
		box-sizing border-box

		h2
			margin-bottom 70px
			text-align center

	.region-history
		padding 105px 0 90px 0
		box-sizing border-box

		h2
			margin-bottom 45px
			text-align center

		h3
			max-width 770px
			width 100%
			margin 0 auto 55px auto

			text-align center

		.history-info
			display flex
			justify-content space-between
			align-items flex-start

			.history-container
				width 40%

				img
					display block
					width 100%

			.history-text
				width 55%
				text-align left

	.region-culture
		padding 75px 0 70px 0

		h2
			margin-bottom 70px
			text-align center

	.region-kitchen
		padding 105px 0 90px 0
		box-sizing border-box

		h2
			margin-bottom 45px
			text-align center

	.region-products
		border-top 1px solid #e3e3e3
		padding 70px 0 100px 0

		h2
			margin-bottom 45px
			text-align center

		.region-products-series
			display block
			width 100%

			margin-bottom 60px

			text-align center

			font-size 18px

			color #4A4A4A

		.products-list
			margin 0 auto

		.more-container
			margin-top 90px
/** //regions detail **/

.region-section
	position relative

	.region-section-bcg
		position absolute
		top 0
		left 0
		right 0

		display block
		width 100%
		height 80vh

		z-index -10

		img
			display block
			width 100%
			height 100%

			object-fit cover

		&:before
			content ''
			position absolute
			top 0
			left 0
			right 0
			bottom 0

			display block
			width 100%
			height 100%

			background rgba(0, 0, 0, 0.5)

	.region-section-logo
		display block
		max-width 100px
		width 100%
		padding-top 55px
		margin 0 auto 35px auto

	.region-section-name
		display block
		width 100%
		margin 30px auto 35px auto

		text-align center

		font-size 54px

		color #ffffff

	.region-section-container
		padding 60px 20px 80px 20px
		box-sizing border-box

		background #ffffff
