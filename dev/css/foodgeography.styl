/*** Settings ***/
@import "nib"
@import "../lib/css/css"

global-reset();
reset-html5();
form-reset();
b
strong
i
em
	font-style normal
	font-weight normal

//$transitionAnimation = cubic-bezier(0.250, 0.460, 0.450, 0.940)
$transitionAnimation = cubic-bezier(0.43, 0.5, 0.87, 0.90)

$colorSand = #c69c6d
$colorMain = #333333

/* fonts */

@font-face
	font-family "HarmoniaSansProCyrRegular"
	src url("../fonts/HarmoniaSansProCyrRegular.woff") format("woff")

@font-face
	font-family "HarmoniaSansProCyrBold"
	src url("../fonts/HarmoniaSansProCyr-Bold.woff") format("woff")

@font-face
	font-family "HarmoniaSansProCyrItalic"
	src url("../fonts/HarmoniaSansProCyr-Italic.woff") format("woff")

@font-face
	font-family "HarmoniaSansProCyrLight"
	src url("../fonts/HarmoniaSansProCyr-Light.woff") format("woff")

@font-face
	font-family "LeksaPro"
	src url("../fonts/LeksaPro.woff") format("woff")

@font-face
	font-family "LeksaProItalic"
	src url("../fonts/LeksaProItalic.woff") format("woff")

@font-face
	font-family "LeksaProLight"
	src url("../fonts/LeksaProLight.woff") format("woff")

/* //fonts */
html
	height 100%
body
	position relative
	width 100%
	height 100%
	min-height 100vh
	line-height 1
	font-size 14px
	font-family "HarmoniaSansProCyrRegular"
	cursor default
	color $colorMain

	transition transform 0.3s $transitionAnimation

body.open-menu
	overflow hidden
	z-index -1

.body-preloader
	position fixed
	top 0
	right 0
	bottom 0
	left 0

	display flex
	justify-content center
	align-items center

	width 100%
	height 100%

	background #ffffff

	transition background 1s $transitionAnimation

	z-index 10000

	overflow hidden

	.body-preloader-bcg
		position absolute
		top 50%
		right 0
		bottom 0
		left 50%

		display block
		width 300px
		height 300px

		margin-left -150px
		margin-top -150px

		background #333333
		border-radius 50%

		opacity 0

		z-index 10001

		transition opacity 0.3s $transitionAnimation, transform 1s $transitionAnimation

	.body-preloader-container
		position relative
		top 3px

		max-width 405px
		width 100%

		opacity 0

		transform scale(0.9)

		transition opacity 0.3s $transitionAnimation, transform 0.3s $transitionAnimation

		z-index 10002

		svg
			display block
			width 100%

	&.active
		.body-preloader-bcg
			opacity 1
			transform scale(10)

	&.active
		.body-preloader-container
			opacity 1
			transition-delay 1s

	&.hide
		background transparent

		.body-preloader-container
			opacity 0
			transition-delay 0s

		.body-preloader-bcg
			opacity 0

body
	&.show-logo
		.main-bcg
			.main-logo
				transition-delay 1s
				opacity 1
				z-index 111111

	&.hide-logo
		.main-bcg
			.main-logo
				opacity 1
				z-index 20

body.region-fixed
	.region-detail-back
		margin-bottom 174px

	.region-detail-fixed
		position fixed
		top 60px
		left 0
		right 0

		padding 20px 0
		box-sizing border-box

		background $colorSand
		//border-bottom-color $colorMain

		z-index 100

	.region-detail-name
		font-size 24px
		margin-right 25px
		margin-bottom 0

	.region-detail-sections
		margin-bottom 0
		margin-top -20px
		opacity 0
		padding-bottom 5px

		.region-detail-sections-item
			font-size 16px

			&:first-child
				margin-left 60px

body.region-fixed--show
	.region-detail-sections
		opacity 1
		transition-delay 2s
		transition opacity 0.6s $transitionAnimation

		.region-detail-sections-item
			font-family "HarmoniaSansProCyrRegular"
			color #fff

			&:after
				background #fff

			&:hover
				&:after
					background #fff


/*** //Settings ***/

/*** General style ***/

.page
	display block
	width 100%

	min-height 100%

	margin 0 auto

.page-inner
	position relative
	display block
	margin 0 auto
	box-sizing border-box

	&--w1
		max-width 100%
		padding 0 20px

	&--w2
		max-width 1290px
		padding 0 20px

	&--w3
		max-width 1065px
		padding 0 20px

	&--w4
		max-width 790px
		padding 0 20px

/** header **/

.page-header
	position fixed
	top 0
	right 0
	left 0
	width 100%
	padding 8px 20px
	box-sizing border-box

	display flex
	justify-content space-between
	align-items center

	background transparent

	transition background 0.3s $transitionAnimation, box-shadow 0.3s $transitionAnimation

	z-index 100

	&.active
		background #333

.fixed-header
	.page-header
		background #333

.header-logo--mini
	display flex
	max-width 180px
	justify-content flex-start
	align-items center

	.header-logo-icon
		display block

		&:nth-child(1)
			width 35px
			margin-right 15px

			svg
				path
					&[fill="#c69c6d"]
						transition fill 0.3s $transitionAnimation

		&:nth-child(2)
			width 130px

			svg
				path
					&[fill="#c69c6d"]
						transition fill 0.3s $transitionAnimation

		svg
			display block
			width 100%

	&:hover
		.header-logo-icon
			&:nth-child(1)
				svg
					path
						&[fill="#c69c6d"]
							fill #fff

			&:nth-child(2)
				width 130px

				svg
					path
						&[fill="#c69c6d"]
							fill #fff
.header-menu
	max-width 470px
	width 100%

	.header-menu-inner
		display flex
		justify-content space-between
		align-items center

	.header-menu-item
		letter-spacing 1px

		color $colorSand
		font-size 14px

		text-transform uppercase

		&.active
			color #fff

.header-form
	max-width 235px
	min-width 200px

	.form-row--search
		width 100%

		.header-form-search
			position absolute
			top 50%
			right 1px

			display block
			width 22px
			height 22px

			margin-top -11px

			transition transform 0.3s $transitionAnimation

			svg
				display block
				width 100%

				path
					stroke-width 7px
		&.active
		&:hover
			.header-form-search
				transform translate(-195px)

		.form-item
			padding 10px 45px
			background transparent

			&:focus
				border-right 5px


		&.active
		&:hover
			.form-item
				background #fff

.header-burger
	position relative
	display none
	width 25px
	height 20px
	cursor pointer

.header-burger
	.header-burger-layout
		position absolute
		top 9px
		left 0
		right 0
		display block
		width 100%
		height 2px
		background #c69c6d
		transition transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	&:before
		content ""
		position absolute
		top 0px
		left 0
		right 0
		display block
		width 100%
		height 2px
		background #c69c6d
		transition transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	&:after
		content ""
		position absolute
		bottom 0px
		left 0
		right 0
		display block
		width 100%
		height 2px
		background #c69c6d
		transition transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	&.active
		.header-burger-layout
			transform scale(0)

		&:before
			transform rotate(40deg) translate(5px, 6px)

		&:after
			transform rotate(-40deg) translate(6px, -8px)

.mobile-menu
	position fixed
	top 0
	right 0
	left 0
	bottom 0
	display none
	width 100%
	min-height 100vh
	transition transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	z-index 99

	.mobile-menu-background
		position absolute
		top 0
		right 0
		left 0
		bottom 0
		display block
		width 100%
		height 100%
		background #333
		transform translateY(-100%)
		transition transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)
		transition-delay 0.3s
		overflow-y auto

	.mobile-menu-container
		padding 80px 0 0 20px
		box-sizing border-box
		opacity 0
		transform translateX(-50px)
		transition transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)
		transition-delay 0s

.mobile-menu
	&.active-block
		display block

.mobile-menu
	&.active-show
		.mobile-menu-background
			transform translateY(0)
			transition-delay 0s

		.mobile-menu-container
			transform translateX(0)
			opacity 1
			transition-delay 0.3s

.mobile-menu-top
	.mobile-menu-top-item-holder
		margin-bottom 20px

	.mobile-menu-top-item
		font-size: 20px;

.mobile-menu
	.header-form
		display block


/** //header **/


/** dispatch **/

.dispatch
	position relative
	padding 100px 0
	box-sizing border-box
	background #c69c6d
	overflow hidden

	.dispatch-title
		margin-bottom 70px
		line-height 32px
		font-size 24px
		text-align center
		color #fff

	.form
		max-width 640px
		margin 0 auto

	&:before
		content ""
		position absolute
		top 50%
		left 0
		right 0

		width 100%
		height 70%

		background url("../svg/fill_.svg")
		background-size contain

		transform translateY(-50%)
		opacity 0.1

/** //dispatch **/


/** footer **/

.page-footer
	padding 100px 0 30px 0
	box-sizing border-box

	background $colorMain

.footer-logo
	max-width 200px
	margin 0 auto 60px auto

	svg
		display block
		width 100%

.footer-sub
	display block
	margin 0 auto 40px auto

	.footer-sub-title
		display block
		width 100%
		margin-bottom 20px

		letter-spacing 1px

		font-size 14px
		font-family "HarmoniaSansProCyrRegular"
		text-align center
		text-transform uppercase

		color #fff

	.footer-sub-list
		display flex
		align-items center
		justify-content space-between

		max-width 110px
		width 100%
		margin 0 auto

		.footer-sub-item
			display block
			max-width 20px
			height 20px
			svg
				display block
				width 100%
				height 100%

				path
					transition fill 0.3s $transitionAnimation

			&:hover
				svg
					path
						fill #fff

.footer-creators
	display block
	width 100%
	text-align center

	.footer-creators-link
		display block
		margin 0 auto
		font-size 14px
		font-family "HarmoniaSansProCyrRegular"
		text-align center

	.footer-creators-name
		letter-spacing 1px

		text-transform uppercase
		color $colorSand

		border-bottom 1px solid transparent
		transition border-bottom-color 0.3s $transitionAnimation

	&:hover
		.footer-creators-name
			border-bottom-color $colorSand

/** //footer **/


/** link and button **/

.link
	text-decoration none

.link-white
	color #fff

.link-black
	color #4a4a4a

.link-sand
	color $colorSand

.link-dark
	color #1A1A1A

.link-black--bottom
	position relative

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background #4a4a4a

		transition transform 0.2s $transitionAnimation, opacity 0.2s $transitionAnimation

	&:hover
		&:after
			opacity 0
			transform translateY(5px)

.link-black--bottom-color
	position relative

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background #4a4a4a

		transition background 0.3s $transitionAnimation

	&:hover
		color $colorSand

		&:after
			background $colorSand



.link-text-show--left
	position relative
	display block
	width 100%

	text-align center

	h2
		position relative
		display inline-block

		&:before
			content attr(data-hover)
			position absolute
			top 0
			left 0
			max-width 0

			overflow hidden
			color $colorSand

			white-space nowrap
			transition max-width 0.5s

		&:hover
			&:before
				max-width 100%


.link-black--bottom-reverse
	position relative

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background #4a4a4a

		opacity 0

		transform translateY(10px)

		transition transform 0.2s $transitionAnimation, opacity 0.2s $transitionAnimation

	&:hover
		&:after
			opacity 1
			transform translateY(5px)


.link-black--top-bottom-reverse
	border-bottom 1px solid transparent
	border-top 1px solid transparent
	transition border-color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	&:hover
		border-top-color #4a4a4a
		border-bottom-color #4a4a4a

.link--opacity
	transition opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	&:hover
		opacity 0.6

.link-darkgray
	color #4A4A4A

.link-gray
	color #a9a9a9

.link-gray--bottom
	position relative

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background #a9a9a9

		transition transform 0.2s $transitionAnimation, opacity 0.2s $transitionAnimation

	&:hover
		&:after
			opacity 0
			transform translateY(5px)


.link-gray--bottom-reverse
	position relative

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background #a9a9a9
		opacity 0
		transform translateY(10px)

		transition transform 0.2s $transitionAnimation, opacity 0.2s $transitionAnimation

	&:hover
		&:after
			opacity 1
			transform translateY(5px)

.link--white
	transition color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	&:hover
		color #fff

.link--sand-bottom
	position relative
	transition border-bottom-color 0.3s $transitionAnimation, color 0.3s $transitionAnimation

	&:hover
		border-bottom-color $colorSand
		color $colorSand

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background $colorSand
		opacity 0
		transform translateY(10px)

		transition transform 0.2s $transitionAnimation, opacity 0.2s $transitionAnimation

	&:hover
		&:after
			opacity 1
			transform translateY(5px)

.link--sand-bottom-reverse
	position relative
	transition border-bottom-color 0.3s $transitionAnimation, color 0.3s $transitionAnimation

	&:hover
		border-bottom-color $colorSand
		color $colorSand

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background $colorSand

		transition transform 0.2s $transitionAnimation, opacity 0.2s $transitionAnimation

	&:hover
		&:after
			opacity 0
			transform translateY(5px)

.link--white-bottom-reverse
	position relative
	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background #fff

		transition transform 0.2s $transitionAnimation, opacity 0.2s $transitionAnimation

	&:hover
		&:after
			opacity 0
			transform translateY(5px)

.link--sand
	transition color 0.3s $transitionAnimation, color 0.3s $transitionAnimation

	&:hover
		color $colorSand

.link--sand
	h2
		transition color 0.3s $transitionAnimation, color 0.3s $transitionAnimation

		&:hover
			color $colorSand

.button
	width 100%

	padding 16.5px 0
	box-sizing border-box

	border-radius 5px

	letter-spacing 1px

	text-align center
	text-transform uppercase

	font-size 16px

	transition background 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), border-radius 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);

.button--dark
	background #333
	color #fff

	&:hover
		background #000

.button--white
	border 2px solid transparent
	border-radius 25px
	padding 8px 10px
	box-sizing border-box
	transition border-color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), border-radius 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);

	&:hover
		border-color $colorSand

.button--sand
	border-radius 20px
	border 1px solid $colorSand
	text-align center
	color $colorSand

	transition background 0.3s $transitionAnimation, color 0.3s $transitionAnimation

	&:hover
		 background $colorSand
		 color #FFF

/** //link and button **/

/** //link and button **/


/** form **/

.form
	.form-row
		position relative
		display flex
		justify-content space-between

	.form-row--60
		width 58%

	.form-row--40
		width 38%

	.form-item
		display block
		width 100%
		padding 16px 25px
		box-sizing border-box
		font-size 14px
		border-radius 5px
		background #fff
		color #4a4a4a

		border 1px solid transparent

		transition border-radius 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), border-color 0.3s $transitionAnimation, background 0.3s $transitionAnimation

		&.error
			background #f7d6d6

		&:hover
			background #fff

	label.error
		position absolute
		bottom -20px
		left 0

		display block
		margin-top 5px

		font-size 14px

		color #ff0303

/** //form **/

.more-container
	text-align center

.more
	padding-bottom 2px

	letter-spacing 1px

	text-transform uppercase

	font-size 14px
	font-family "HarmoniaSansProCyrBold"

	transition border-bottom-color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	position relative

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background #979797

		transition transform 0.2s $transitionAnimation, opacity 0.2s $transitionAnimation

	&:hover
		&:after
			opacity 0
			transform translateY(5px)

.page-text
	font-size 16px
	line-height 28px

	h1
		font-size 60px
		line-height 80px

	h2
		color #4a4a4a
		font-size 44px
		line-height 1

	h3
		margin-bottom 40px
		color #4c4c4c
		line-height 36px
		font-size 28px
		font-family "LeksaProItalic"

	h4
		color #4A4A4A
		line-height 34px
		font-size 24px

	p
		margin-bottom 25px
		line-height 28px

		text-align left
		font-size 18px
		font-family "LeksaPro"

		color #4c4c4c

	img
		display block
		width 100%

	.center
		text-align center

	dl
		position relative
		margin-top 60px
		margin-bottom 55px
		overflow hidden

		dt
			width 48%
			float left
			margin-right 4%
			margin-bottom 30px

			line-height 28px

			font-family "HarmoniaSansProCyrBold"
			font-size 18px

			color #4f4f4f

		dd
			width 48%
			float left
			margin-bottom 30px

			line-height 28px

			font-size 18px
			color #4c4c4c

	ul
		display block
		margin-bottom 30px

		li
			position relative
			display block
			padding-left 40px
			box-sizing border-box
			margin-bottom 20px

			font-size 18px
			font-family "LeksaPro"

			color #4c4c4c

			&:before
				content "\2022"
				position absolute
				left 10px
				top -2px
				font-size 26px
	ol
		display block
		margin-bottom 30px
		counter-reset num

		li
			position relative
			display block
			padding-left 40px
			box-sizing border-box
			margin-bottom 20px

			font-size 18px
			font-family "LeksaPro"

			color #4c4c4c

			&:before
				position absolute
				content counter(num) ' -  '
				counter-increment num
				left 0


	strong
		font-weight 600

	b
		font-weight 600

	i
		font-style italic

	figure
		display block

	figcaption
		margin-top 20px
		font-size 14px

	em
		font-family "HarmoniaSansProCyrBold"
		font-style italic

.slider-container
	position relative
	margin-top 50px

	overflow hidden

	.slider-nav-counter
		position absolute
		bottom 60px
		left 50%

		margin-left -13.5px

		font-family "LeksaPro"
		font-size 18px

		line-height 22px


.region-section
	.slider-container
		.slider-nav-counter
			bottom 110px

.slider
	margin-bottom 50px
	box-sizing border-box

	.owl-item

		.slider-item-holder
			position relative

			&:before
				content ""
				display block
				padding-top 63%

			img
				position absolute
				top 0
				left 0
				bottom 0
				right 0

				display block
				width 100%
				height 100%

				object-fit cover

		.slider-item-note
			position absolute
			left 50%
			bottom 0

			display block
			max-width 60%
			width 100%

			margin 50px auto 0 auto

			line-height 24px
			text-align center

			font-size 16px
			font-family "LeksaProItalic"

			opacity 0
			transition transform 0.6s $transitionAnimation, opacity 0.3s $transitionAnimation
			transition-delay 1s
			transform translateY(10px) translateX(-50%)

			color #4C4C4C

		&.active
			.slider-item-note
				opacity 1
				transform translateY(0) translateX(-50%)

